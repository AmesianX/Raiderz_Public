            btnArenaReMatch:SetCheck( btnArenaReMatch:GetCheck());
          </OnValueChanged>
        </Event>
      </Button>

      <!-- Buttons : Exit -->
      <Button name="btnArenaExit">
        <Look>lookDefButton</Look>
        <Layout>
          <Location x="450" y="380" />
          <Size w="200" h="30" />
        </Layout>
        <Shape>
          <HotKey>E</HotKey>
        </Shape>
        <Event>
          <OnLoaded>this:SetText( STR( "ARENA_EXIT"));</OnLoaded>
          <OnClick>
            if(btnArenaReMatch:GetShow() == true and btnArenaReMatch:GetCheck() == true) then
              luaArena.bReservedReMatching = true;
            end

            frmArenaChannelExitButton:Show(false);
            gamefunc:ArenaExit();
            gamefunc:LeaveDynamicField();
          </OnClick>
        </Event>
      </Button>
    
    </Controls>
  </Frame>




