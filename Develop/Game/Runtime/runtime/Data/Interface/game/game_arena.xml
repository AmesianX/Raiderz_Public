          <OnClick>
            gamefunc:InviteRespondArena(0);
            luaArena.nState = ARENA_STAGE.AS_NORMAL;
            frmRequestInvite:Show(false);
          </OnClick>
        </Event>
      </Button>

    </Controls>
  </Frame>




