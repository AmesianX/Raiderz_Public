        </Layout>
        <Shape>
          <HotKey>Y</HotKey>
        </Shape>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_ACCEPT"));</OnLoaded>
          <OnClick>
            gamefunc:InviteRespondArena(1);
            luaArena.nState = ARENA_STAGE.AS_NONE;
            frmRequestInvite:Show(false);

            local w, h = frmRequestInviteWaiting:GetSize();
            local width, height = gamefunc:GetWindowSize();
            frmRequestInviteWaiting:SetPosition( width*0.5 - w*0.5, height*0.5 - h*0.5);
