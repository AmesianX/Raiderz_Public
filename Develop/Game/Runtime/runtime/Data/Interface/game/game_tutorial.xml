<?xml version="1.0" encoding="UTF-8"?>
<UI sheet="game">

  <!-- Include script -->
  <Script file="game_tutorial.lua" />


  <!-- Panel : PopupTutorial frame -->
  <Panel name="pnlPopupTutorialFrame" parent="layerGame0">
    <Layout>
      <Location x="600" y="400" />
      <Size w="420" h="199" />
    </Layout>
    <Shape>
      <Visible>false</Visible>
      <Resize>true</Resize>
      <Static>true</Static>
      <ShowBorder>false</ShowBorder>
    </Shape>
    <Event>
      <OnShow>luaPopupTutorial:OnShowPopupTutorialFrame();</OnShow>
      <OnUpdate>luaPopupTutorial:OnUpdatePopupTutorialFrame();</OnUpdate>
      <OnTimer>luaPopupTutorial:OnTimerPopupTutorialFrame();</OnTimer>
    </Event>
    <Controls>

      <!-- Background image -->
      <Picture>
        <Layout>
          <Location x="0" y="0" />
          <Size w="420" h="199" />
          <Anchor left="true" top="true" right="true" bottom="true" />
        </Layout>
        <Image>TutorialFrame</Image>
        <Shape>
          <Stretch>true</Stretch>
          <Opacity>1.0</Opacity>
        </Shape>
      </Picture>

      <!-- TextView : Help Img left -->
      <TextView name="ImgTutorial">
        <Look>lookHelpTextView</Look>
        <Layout>
          <Location x="25" y="55" />
          <Size w="179" h="119" />
          <Anchor left="true" top="true" right="false" bottom="true" />
        </Layout>
        <Shape>
          <ShowScrollBar>hide</ShowScrollBar>
          <Static>true</Static>
          <Wrap>false</Wrap>
        </Shape>
      </TextView>

      <!-- TextView : Help Img right -->
      <TextView name="ImgTutorial2">
        <Look>lookHelpTextView</Look>
        <Layout>
         <Location x="213" y="52" />
          <Size w="186" h="126" />
          <Anchor left="true" top="true" right="false" bottom="true" />
        </Layout>
        <Shape>
          <ShowScrollBar>hide</ShowScrollBar>
          <Static>true</Static>
          <Wrap>false</Wrap>
        </Shape>
      </TextView>

       <!-- TextView : Message -->
      <TextView name="tvwPopupTutorialMsg">
        <Look>lookHelpTextView</Look>
        <Layout>
          <Location x="30" y="25" />
          <Size w="400" h="50" />
          <Anchor left="true" top="true" right="false" bottom="true" />
        </Layout>
        <Shape>
          <ShowScrollBar>hide</ShowScrollBar>
          <Static>true</Static>
          <Wrap>false</Wrap>
        </Shape>
      </TextView>

    </Controls>
  </Panel>
  
  <!-- Picture : Help key -->
  <Picture name="picHelpKey" parent="layerGame0">
    <Layout>
      <Location x="%100" y="%90" base="BOTTOMRIGHT"/>
      <Size w="140" h="78" />
      <Anchor left="false" top="false" right="true" bottom="true" />
    </Layout>
    <Image>bmpHelpKey</Image>
    <Shape>
      <Visible>false</Visible>
      <Opacity>0.75</Opacity>
      <Stretch>true</Stretch>
    </Shape>
    <Event>
      <OnLoaded>
      </OnLoaded>
    </Event>
  </Picture>

</UI>
