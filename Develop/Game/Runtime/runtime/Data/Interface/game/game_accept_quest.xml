<?xml version="1.0" encoding="UTF-8"?>
<UI sheet="game">

  <!-- Include script -->
  <Script file="game_accept_quest.lua" />

  
  
  <!-- Frame : Accept quest -->
  <Frame name="frmAcceptQuest" parent="layerGame1">
    <Layout>
      <Location x="570" y="70" />
      <Size w="400" h="600" />
      <Anchor left="false" top="true" right="true" bottom="false" />
    </Layout>
    <Shape>
      <ShowBorder>false</ShowBorder>
      <ShowTitleBar>false</ShowTitleBar>
      <Visible>false</Visible>
      <Resize>false</Resize>
      <Movable>false</Movable>
      <Static>true</Static>
    </Shape>
    <Event>
      <OnLoaded>luaGame:RegisterWindow( frmAcceptQuest);</OnLoaded>
      <OnShow>luaAcceptQuest:OnShowAcceptQuestFrame();</OnShow>
      <OnUpdate>luaAcceptQuest:OnUpdateAcceptQuestFrame();</OnUpdate>
    </Event>
    <Controls>
      
      <!-- Panel : Scroll -->
      <Panel name="pnlAcceptQuestScroll">
        <Layout>
          <Location x="0" y="0" />
          <Size w="%100" h="560" />
        </Layout>
        <Controls>

          <!-- Panel : Text -->
          <Panel>
            <Layout>
              <Location x="0" y="5" />
              <Size w="%100" h="540" />
              <Anchor left="true" top="true" right="true" bottom="true" />
            </Layout>
            <Controls>
            
              <!-- Picture : Scroll paper -->
              <Picture>
                <Layout>
                  <Location x="0" y="0" />
                  <Size w="400" h="540" />
                </Layout>
                <Image>bmpScrollPaper</Image>
              </Picture>

              
              <!-- TextView : Message -->
              <TextView name="tvwAcceptQuest">
                <Look>lookDefScrollTextView</Look>
                <Look type="scrollbar">lookDefScrollBar</Look>
                <Layout>
                  <Location x="25" y="25" />
                  <Size w="355" h="495" />
                </Layout>
                <Shape>
                  <ShowScrollBar>show</ShowScrollBar>
                  <ThumbLength>26</ThumbLength>
                  <Wrap>false</Wrap>
                </Shape>
                <Event>
                  <OnToolTip>luaAcceptQuest:OnToolTipAcceptQuest();</OnToolTip>
                </Event>
              </TextView>
            
            </Controls>
          </Panel>
          

          <!-- Picture : Scroll head/tail -->
          <Picture>
            <Layout>
              <Location x="0" y="0" />
              <Size w="400" h="70" />
            </Layout>
            <Image>bmpScrollHead</Image>
          </Picture>

          <Picture>
            <Layout>
              <Location x="0" y="%100" base="BOTTOMLEFT"/>
              <Size w="400" h="70" />
              <Anchor left="false" top="false" right="false" bottom="true" />
            </Layout>
            <Image>bmpScrollTail</Image>
          </Picture>
        
        </Controls>
      </Panel>
        

      <!-- Buttons : Accept quest -->
      <Button>
        <Look>lookDefButton</Look>
        <Layout>
          <Location x="20" y="560" />
          <Size w="230" h="30" />
        </Layout>
        <Shape>
          <Icon w="28" h="28">iconOK</Icon>
        </Shape>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_ACCEPT"));</OnLoaded>
          <OnClick>luaAcceptQuest:OnClickAcceptQuest();</OnClick>
        </Event>
      </Button>

      
      <!-- Buttons : Cancel -->
      <Button>
        <Look>lookDefButton</Look>
        <Layout>
          <Location x="270" y="560" />
          <Size w="110" h="30" />
        </Layout>
        <Shape>
          <Icon w="28" h="28">iconCancel</Icon>
        </Shape>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_CANCEL"));</OnLoaded>
          <OnClick>frmAcceptQuest:Show( false);</OnClick>
        </Event>
      </Button>
    
    </Controls>
  </Frame>


</UI>
