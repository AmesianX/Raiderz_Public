    </Layout>
    <Shape>
      <Visible>false</Visible>
      <Resize>false</Resize>
      <Movable>true</Movable>
      <ShowTitleBar>false</ShowTitleBar>
    </Shape>
    <Event>
      <OnShow>luaEnchant:OnShowEnchantProgress();</OnShow>
    </Event>
    <Controls>

      <!-- LabelEx : Message -->
      <LabelEx>
        <Layout>
          <Location x="0" y="10" />
          <Size w="%100" h="25" />
        </Layout>
        <Shape>
          <Font>fntScriptStrong</Font>
          <FontColor r="230" g="230" b="230"/>
          <Align>hcenter,vcenter</Align>
        </Shape>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_ENCHANT_ENCHANTINGITEM"));</OnLoaded>
