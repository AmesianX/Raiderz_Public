      <!-- Button : Do enchanting -->
      <Button name="btnDoEnchanting">
        <Look>lookDefButton</Look>
        <Layout>
          <Location x="10" y="460" />
          <Size w="160" h="30" />
        </Layout>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_APPLY"));</OnLoaded>
          <OnClick>luaEnchant:OnClickDoEnchanting();</OnClick>
        </Event>
      </Button>

      <!-- Button : Cancel -->
      <Button>
        <Look>lookDefButton</Look>
        <Layout>
          <Location x="180" y="460" />
          <Size w="160" h="30" />
        </Layout>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_CANCEL"));</OnLoaded>
          <OnClick>frmEnchant:Show( false);</OnClick>
        </Event>
      </Button>

    </Controls>
