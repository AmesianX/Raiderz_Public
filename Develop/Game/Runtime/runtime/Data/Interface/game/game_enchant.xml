          <Size w="27" h="26" />
        </Layout>
        <Shape>
          <HotKey>ESC</HotKey>
        </Shape>
        <Event>
          <OnClick>frmEnchant:Show( false);</OnClick>
        </Event>
      </Button>

      
      <!-- Picture : Background image -->
