      <!-- ProgressCtrl : Enchanting progress bar -->
      <ProgressCtrl name="pcEnchantProgress">
        <Look>lookDefProgressCtrl</Look>
        <Layout>
          <Location x="20" y="40" />
          <Size w="330" h="23" />
        </Layout>
        <Shape>
          <Range lower="0" upper="100"/>
        </Shape>
        <Event>
          <OnUpdate>luaEnchant:OnUpdateEnchantProgressBar();</OnUpdate>
        </Event>
      </ProgressCtrl>

    </Controls>
