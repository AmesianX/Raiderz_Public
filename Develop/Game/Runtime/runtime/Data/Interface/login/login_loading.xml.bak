  <!-- Panel : Login loading frame -->
  <Panel name="pnlLoginLoadingFrame" parent="layerLoginLoading">
    <Layout>
      <Location x="0" y="0" />
      <Size w="%100" h="%100" />
      <Anchor left="false" top="true" right="true" bottom="true" />
    </Layout>
    <Shape>
      <ShowRect>false</ShowRect>
    </Shape>
    <Event>
      <OnPosition>
        local x, y, w, h = pnlLoginLoadingFrame:GetRect();
        local x = ( gamefunc:GetWindowWidth() - w) * 0.5;
        pnlLoginLoadingFrame:SetPosition( x, y);
      </OnPosition>
    </Event>
    <Controls>


      <!-- Picture : Game logo -->
      <Picture name ="picLoginLoadingLogo">
        <Layout>
          <Location x="256" y="0" />
          <Size w="512" h="128" />
          <Anchor left="true" top="true" right="false" bottom="false" />
        </Layout>
        <Image>bmpLogo</Image>
        <Shape>
          <Stretch>true</Stretch>
          <ShowRect>false</ShowRect>
        </Shape>
      </Picture>      
      
      <Picture name="picLoginLodingMaiet">
        <Layout>
          <Location x="142" y="623" />
          <Size w="200" h="95" />
          <Anchor left="true" top="false" right="false" bottom="true" />
        </Layout>
        <Image>bmpLogoMaiet</Image>
        <Shape>
          <Stretch>true</Stretch>
          <ShowRect>false</ShowRect>
        </Shape>
      </Picture>
      
      <Picture>
        <Layout>
          <Location x="412" y="640" />
          <Size w="200" h="60" />
          <Anchor left="true" top="false" right="false" bottom="true" />
        </Layout>
        <Image>bmpLogo1</Image>
        <Shape>
          <Stretch>true</Stretch>
        </Shape>
      </Picture>
      
      <Picture>
        <Layout>
          <Location x="682" y="640" />
          <Size w="200" h="60" />
          <Anchor left="true" top="false" right="false" bottom="true" />
        </Layout>
        <Image>bmpLogo2</Image>
        <Shape>
          <Stretch>true</Stretch>
        </Shape>
      </Picture>


      <!-- Loading progress bar -->
      <LabelEx>
        <Layout>
          <Location x="62" y="710" />
          <Size w="900" h="25" />
          <Anchor left="true" top="false" right="false" bottom="true" />
        </Layout>
        <Shape>
          <Font>fntScript</Font>
          <FontColor r="230" g="230" b="230" />
          <Align>hcenter,bottom</Align>
        </Shape>
        <Event>
          <OnLoaded>this:SetText( STR( "UI_LOGIN_LOADINGMSG"));</OnLoaded>
        </Event>
      </LabelEx>

      <ProgressCtrl name="pcLoginLoading">
        <Look>lookDefProgressCtrl</Look>
        <Layout>
          <Location x="62" y="740" />
          <Size w="900" h="23" />
          <Anchor left="true" top="false" right="false" bottom="true" />
        </Layout>
        <Shape>
          <Range lower="0" upper="100"/>
          <Pos>100</Pos>
        </Shape>
      </ProgressCtrl>      
      
    </Controls>
  </Panel>

  <!-- 배경 -->
  <Picture name="picLoginLoadingBase" parent="layerLoginLoading">
    <Layout>
      <Location x="500" y="320" />
      <Size w="531" h="512" />
    </Layout>
    <Image>bmpLoginLoadingImg</Image>
    <Shape>
      <Stretch>true</Stretch>
      <ShowRect>false</ShowRect>
    </Shape>
    <Event>
      <OnLoaded>
        luaLoginLoding:OnLoadedpicLoginLoadingBase();
      </OnLoaded>
    </Event>
  </Picture>

  <!-- 몬스터 -->
  <Picture name="picLoginLoadingMonster"parent="layerLoginLoading">
    <Layout>
      <Location x="320" y="320" />
      <Size w="320" h="320" />
    </Layout>
    <Image>bmpLoginLoadingImg</Image>
    <Shape>
      <Stretch>true</Stretch>
      <ShowRect>false</ShowRect>
    </Shape>
    <Event>
      <OnLoaded>
        luaLoginLoding:OnLoadedpicLoginLoadingMonster();
      </OnLoaded>
    </Event>
  </Picture>

  <!-- TextView : Loading message -->
  <TextView name="tvwLoadingMsg" parent="layerLoginLoading">
    <Look>lookDefTextView</Look>
    <Layout>
      <Location x="0" y="344" />
      <Size w="%100" h="200" />
      <Anchor left="false" top="false" right="true" bottom="true" />
    </Layout>
    <Shape>
      <ShowScrollBar>hide</ShowScrollBar>
      <Wrap>false</Wrap>
      <ShowRect>false</ShowRect>
    </Shape>
    <Event>
      <OnLoaded>
        local strText = "{ALIGN hor=\"center\" ver=\"center\"}{FONT name=\"fntHeadline\"}{COLOR r=255 g=255 b=255}" .. STR( "UI_LOGIN_WELCOME");
        this:SetText( strText);
        this:Show( gamefunc:IsGameDeliberation() );

        local x, y, w, h = tvwLoadingMsg:GetRect();
        local x = ( gamefunc:GetWindowWidth() - w) * 0.5;
        local y = ( gamefunc:GetWindowHeight() - h) * 0.8;
        tvwLoadingMsg:SetPosition( x, y);
      </OnLoaded>
      <OnPosition>
        local x, y, w, h = tvwLoadingMsg:GetRect();
        local x = ( gamefunc:GetWindowWidth() - w) * 0.5;
        local y = ( gamefunc:GetWindowHeight() - h) * 0.8;
        tvwLoadingMsg:SetPosition( x, y);
      </OnPosition>
    </Event>
  </TextView>

  <!-- Game info -->
  <Picture parent="layerLoginLoading">
    <Layout>
      <Location x="1014" y="30" base="TOPRIGHT" />
      <Size w="263" h="150" />
      <Anchor left="false" top="true" right="true" bottom="false" />
    </Layout>
    <Image>bmpdeliberation</Image>
    <Shape>
      <Stretch>true</Stretch>
    </Shape>
    <Event>
      <OnLoaded>this:Show( 1 );</OnLoaded>
    </Event>
  </Picture>

</UI>
