  <!-- Include script -->
  <Script file="login_loading.lua" />
  
  <!-- Paint : Character black screen -->
  <Paint parent="layerLoginLoading">
    <Layout>
      <Location x="0" y="0" />
      <Size w="%100" h="%100" />
      <Anchor left="true" top="true" right="true" bottom="true"/>
    </Layout>
    <Shape>
      <Color r="0" g="0" b="0" />
    </Shape>
  </Paint>

  <!-- Background image 
  <Picture name="picGmaeLoadingImg" parent="layerLoginLoading">
