end

function NPC_8896001:OnFinishSlidingAttack( ThisActor, Enemy )

end


-- 판정 > 평소 > 몸통
function NPC_8896001:OnHitCapsule_1_0(HitInfo)
	return NPC_8896001:ProcessHitBody( this, HitInfo )
end

-- 판정 > 브레스중 > 몸통
function NPC_8896001:OnHitCapsule_2_0(HitInfo)
	return NPC_8896001:ProcessHitBody( this, HitInfo )
end

-- 판정 > 브레스중 > 입
function NPC_8896001:OnHitCapsule_2_1(HitInfo)
	return NPC_8896001:ProcessHitBody( this, HitInfo )
end

-- 판정 > Pain1 > 뿔
function NPC_8896001:OnHitCapsule_3_2(HitInfo)
	--GLog( "OnHitCapsule_3_2\n" )
	return NPC_8896001:AccDamage( this, HitInfo)
end

function NPC_8896001:ProcessHitBody( ThisNPC, dHitInfo )

	local AccDamage	-- 누적데미지 
	
	AccDamage = ThisNPC:GetUserData(2) + dHitInfo.Damage
	
	if AccDamage > NPC_8896001.PainHP then
		ThisNPC:ClearJob()			
		ThisNPC:UseTalentSelf( NPC_8896001.TALENT_Pain1 )
		
		AccDamage = 0
	end
	
	ThisNPC:SetUserData( 2, AccDamage )

	return dHitInfo
end

function NPC_8896001:AccDamage( ThisNPC, dHitInfo)

	local AccDamage	-- 누적데미지 
	
	if (not ThisNPC:CheckBPart(NPC_8896001.BreakPartID)) then
		--GLog("NPC_8896001:AccDamage\n")
		
		AccDamage = ThisNPC:GetUserData(1) + dHitInfo.Damage
		
		if AccDamage > NPC_8896001.BreakPartHP then
			ThisNPC:ClearJob()			
			ThisNPC:UseTalentSelf( NPC_8896001.TALENT_Pain2 )
			ThisNPC:UseTalentSelf( NPC_8896001.TALENT_Roar )
			
			ThisNPC:BreakPart(NPC_8896001.BreakPartID, dHitInfo.Attacker)
		end
		
		ThisNPC:SetUserData( 1, AccDamage )
	end
	
	return dHitInfo
end

function NPC_8896001:OnFinishAndAggroShort( ThisActor, Enemy )
	local ThisNPC = AsNPC( ThisActor )
	ThisNPC:Aggro( "short", 0 )
end

function NPC_8896001:OnFinishAndAggroRandom( ThisActor, Enemy )
	local ThisNPC = AsNPC( ThisActor )
	ThisNPC:Aggro( "random", 0 )
end


