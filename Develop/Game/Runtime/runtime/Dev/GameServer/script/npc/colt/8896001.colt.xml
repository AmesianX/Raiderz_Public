function NPC_8896001:Init( NPCID )

	--GLog( "Init\n" )
	
	--[[
		User Data
		1: BreakPart 뿔
		2: Total Damage
	--]]
	NPC_ReserveUserData( NPCID, 2 );

	
	NPC_8896001.BreakPartHP	= NPC_8896001.MaxHP / 15
	--NPC_8896001.BreakPartHP	= 100	-- test
	
	NPC_8896001.PainHP	= NPC_8896001.MaxHP / 5
	
	NPC_8896001.BreakPartID = 1
	NPC_8896001.TALENT_Pain1 = 210932314
	NPC_8896001.TALENT_Pain2 = 210932318
	NPC_8896001.TALENT_Roar = 210932305
	
end

