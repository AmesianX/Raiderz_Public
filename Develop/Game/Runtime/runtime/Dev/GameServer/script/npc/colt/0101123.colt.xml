	<SCRIPT><![CDATA[
	
function NPC_101123:Init( NPCID )
	NPC_101123.TALENT_1 = 210112111 -- 역습 포커스
	NPC_101123.TALENT_2 = 210112114 -- 보루
end

function NPC_101123:SelectSkill(ThisNPC, Enemy)
	local ranNum = math.random(0, 2)
	
	if (ranNum == 1) then
		ThisNPC:UseTalent( NPC_101123.TALENT_1, Enemy )
	elseif (ranNum == 2) then
		ThisNPC:UseTalent( NPC_101123.TALENT_2, Enemy )
	end
end

