 플레이어 
-->
	<!-- idle -->
	<MOTION name="idle" stance="all" loop="true" cancelEnabled="true" cameraLook="false" postfix="true">
		<Default>
			<Sequence ani="idle"/>
		</Default>
	</MOTION>
	
